# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=lifeos_analytics

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKER=localhost:9092

# Google Cloud Platform (for BigQuery)
GCP_PROJECT_ID=your-gcp-project-id
GCP_KEY_FILE=./gcp-service-account-key.json

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Application Configuration
NODE_ENV=development
PORT=3006

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# BigQuery Dataset
BIGQUERY_DATASET=lifeos_analytics
BIGQUERY_EVENTS_TABLE=events

# Monitoring
PROMETHEUS_PORT=9090

# Security
BCRYPT_ROUNDS=12