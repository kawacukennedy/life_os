{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": ["text", "lcov", "html"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/$1"
  }
}